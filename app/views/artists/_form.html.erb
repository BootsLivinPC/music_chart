<h1>Add Artist</h1>
<h1><%= @artist.id ? 'Edit artist' : 'Create artist' %></h1>
<hr />
<%= form_with(model: [@song, @artist], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>